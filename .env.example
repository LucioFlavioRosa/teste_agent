# Credenciais de API
OPENAI_API_KEY=sua_chave_api_openai
GITHUB_TOKEN=seu_token_github

# Configurações do Modelo
MODELO_LLM=gpt-4.1
MAX_TOKENS_SAIDA=3000

# Configurações do Servidor
PORT=5000
DEBUG=True

# Configurações do Azure App Service
AZURE_WEBAPP_NAME=nome-do-seu-app-service
WEBSITE_HOSTNAME=seu-app.azurewebsites.net
WEBSITE_SITE_NAME=seu-app-service
WEBSITE_RUN_FROM_PACKAGE=1

# Configurações de Banco de Dados (se aplicável)
DATABASE_URL=sua_string_conexao_db

# Configurações de Logging
LOG_LEVEL=INFO

# Configurações de Cache (se aplicável)
CACHE_TYPE=redis
REDIS_URL=sua_url_redis

# Configurações de Segurança
SECRET_KEY=chave_secreta_para_sessoes_ou_tokens
ALLOWED_HOSTS=localhost,127.0.0.1,seu-app.azurewebsites.net