# Configurações de API
OPENAI_API_KEY=sk-your-openai-key-here  # Chave de API da OpenAI para acesso aos modelos LLM
GITHUB_TOKEN=ghp_your-github-token-here  # Token de acesso ao GitHub para leitura de repositórios

# Configurações da Aplicação
FLASK_ENV=development  # Ambiente Flask (development, testing, production)
DEBUG=True  # Ativa/desativa o modo debug (True/False)
PORT=5000  # Porta em que a aplicação será executada

# Configurações do Azure App Service
AZURE_WEBAPP_NAME=your-app-name  # Nome da sua aplicação no Azure App Service
AZURE_RESOURCE_GROUP=your-resource-group  # Grupo de recursos no Azure
AZURE_LOCATION=eastus  # Localização do recurso no Azure

# Configurações de Logging
LOG_LEVEL=INFO  # Nível de log (DEBUG, INFO, WARNING, ERROR, CRITICAL)

# Configurações de Modelo LLM
DEFAULT_MODEL=gpt-4.1  # Modelo padrão a ser usado
MAX_TOKENS_OUTPUT=3000  # Número máximo de tokens na saída

# Configurações de Cache (opcional)
CACHE_TYPE=simple  # Tipo de cache (simple, redis, etc.)
REDIS_URL=redis://localhost:6379/0  # URL do Redis, se aplicável

# Configurações de Segurança
SECRET_KEY=your-secret-key-here  # Chave secreta para sessões e tokens
ALLOWED_HOSTS=localhost,127.0.0.1  # Hosts permitidos para acessar a API